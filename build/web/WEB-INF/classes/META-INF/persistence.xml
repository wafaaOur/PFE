<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="PFEPU" transaction-type="JTA">
    <jta-data-source>java:app/pfe_jndi</jta-data-source>
    <class>bean.Categorie</class>
    <class>bean.Device</class>
    <class>bean.Division</class>
    <class>bean.Marche</class>
    <class>bean.Produit</class>
    <class>bean.Reclamation</class>
    <class>bean.ReclamationItem</class>
    <class>bean.Service</class>
    <class>bean.Societe</class>
    <class>bean.Technicien</class>
    <class>bean.User</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
